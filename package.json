{
  "name": "sentinel-action",
  "version": "1.0.0",
  "description": "AI-powered GitHub Action for automated pull request reviews",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run bundle",
    "bundle": "esbuild dist/index.js --bundle --platform=node --target=node18 --outfile=dist/index.bundle.js --external:@actions/core --external:@actions/github && move dist\\index.bundle.js dist\\index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "prepare": "npm run build"
  },
  "keywords": [
    "github-action",
    "ai",
    "code-review",
    "openai",
    "gemini",
    "pull-request"
  ],
  "author": "Sentinel Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@google/generative-ai": "^0.24.1",
    "node-cache": "^5.1.2",
    "openai": "^4.20.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
